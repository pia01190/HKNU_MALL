<html lang="en">
    <%-include('layouts/header');-%>

<script src="https://maps.googleapis.com/maps/api/js?key=AIzaSyBicTQasHfr57CHiw9W08r4C2Vvgw-aC10" async></script>
<script src="js/myLoc.js"></script>
<script>
    infiniteScroll({
